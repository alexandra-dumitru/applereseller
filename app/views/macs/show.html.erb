<% provide(:title, "Mac Products") %>

<div class="center jumbotron">
  <div class="row">
    <div class="col-xs-6 col-md-6">
        <%= image_tag("macbook.jpg", alt: "Macbook image")%>
        <p> <%= mac.description %> </p>
     </div>

     <div class="col-xs-6 col-md-4">
        <%= render :partial => 'macs/orderform_mac', :object => @order %>
     </div>
  </div> 
</div>

<p id="notice"><%= notice %></p>

<p>
  <strong>Type:</strong>
  <%= @mac.mac_type %>
</p>

<p>
  <strong>Size:</strong>
  <%= @mac.size %>
</p>

<p>
  <strong>Color:</strong>
  <%= @mac.color %>
</p>

<p>
  <strong>Description:</strong>
  <%= @mac.description %>
</p>

<p>
  <strong>Price:</strong>
  <%= @mac.price %>
</p>

<%= link_to 'Edit', edit_mac_path(@mac) %> |
<%= link_to 'Back', macs_path %>


