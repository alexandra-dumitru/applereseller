<p id="notice"><%= notice %></p>

<h1>Macs</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Size</th>
      <th>Color</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @macs.each do |mac| %>
      <tr>
        <td><%= mac.type %></td>
        <td><%= mac.size %></td>
        <td><%= mac.color %></td>
        <td><%= mac.description %></td>
        <td><%= mac.price %></td>
        <td><%= link_to 'Show', mac %></td>
        <td><%= link_to 'Edit', edit_mac_path(mac) %></td>
        <td><%= link_to 'Destroy', mac, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

