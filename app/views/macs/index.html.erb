<% provide(:title, "Mac Products") %>

<div class="center jumbotron products-body" style="background-color: #cccccc">
<h1>Mac products</h1>
      <% counter = 0 %>
      <% @macs.each do |mac| %>
        <% counter = counter + 1 %>
        <% if counter % 3 == 0  %>
          <div class="row"> 
        <% end %>
            <div class="col-md-4">
              <div class="thumbnail">
                <%= link_to mac do %>
                  <%= image_tag("macbook_default.jpg", alt: "Macbook default")%>
                  <div class="caption">
                    <span><%= mac.mac_type %></span><br>
                    <span><%= mac.size.to_s %> inch</span><br>
                    <% case mac.color %>
                    <% when "pink" %>
                      <div class="pink-square"></div>
                    <% when "gold" %>
                      <div class="gold-square"></div>
                    <% when "silver" %>
                      <div class="silver-square"></div>
                    <% when "black" %>
                      <div class="black-square"></div>
                    <% else %>
                      <div class="silver-square"></div>
                    <% end %>
                    <small><%= mac.description %></small><br>
                    <div class="price-area">$<%= mac.price %></div>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>      
        </div>  
</div>


<p id="notice"><%= notice %></p>

<table style="display:none">
  <thead>
    <tr>
      <th>Type</th>
      <th>Size</th>
      <th>Color</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @macs.each do |mac| %>
      <tr>
        <td><%= mac.mac_type %></td>
        <td><%= mac.size %></td>
        <td><%= mac.color %></td>
        <td><%= mac.description %></td>
        <td><%= mac.price %></td>
        <td><%= link_to 'Show', mac %></td>
        <td><%= link_to 'Edit', edit_mac_path(mac) %></td>
        <td><%= link_to 'Destroy', mac, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

