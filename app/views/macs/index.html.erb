<p id="notice"><%= notice %></p>

<h1>Macs</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Size</th>
      <th>Color</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @macs.each do |mac| %>
      <tr>
        <td><%= mac.mac_type %></td>
        <td><%= mac.size %></td>
        <td><%= mac.color %></td>
        <td><%= mac.description %></td>
        <td><%= mac.price %></td>
        <td><%= link_to 'Show', mac %></td>
        <td><%= link_to 'Edit', edit_mac_path(mac) %></td>
        <td><%= link_to 'Destroy', mac, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mac', new_mac_path %>

<% provide(:title, "Mac Products") %>

<div class="center jumbotron products-body" style="background-color: #cccccc">
  <div class="row">
    
      <% @macs.each do |mac| %>
        <div class="col-md-4">
          <div class="thumbnail">
            <%= link_to mac do %>
              <%= image_tag("macbook_default.jpg", alt: "Macbook default")%>
              <div class="caption">
                <%= mac.mac_type + " " + mac.size.to_s + " " + mac.color + " " + mac.description %>
              </div>
            <% end %>
          </div>
          </div>
      <% end %>  
    
  </div>
</div>
